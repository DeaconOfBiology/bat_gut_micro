#!/bin/bash
#SBATCH --partition=Orion
#SBATCH --job-name=testing_binning_script
#SBATCH --nodes=1
#SBATCH --ntasks-per-node=15
#SBATCH --mem=200gb
#SBATCH --time=02-00:00:00

#SBATCH --error=../slurm/%x_%j.err
#SBATCH --output=../slurm/%x_%j.out

# Load required modules 
module purge
module load mambaforge/4.14
mamba activate bwa
mamba activate samtools

# Run script
python3 /projects/raw_lab/projects/Bats/bat_gut_micro/titan_project/bin/scripts/titan_binning2.py \
    -f /projects/raw_lab/projects/Bats/bat_gut_micro/titan_project/data/processed/titan_output/step_03-decon \
    -a /projects/raw_lab/projects/Bats/bat_gut_micro/titan_project/data/processed/titan_output/step_06-assemble \
    -o /projects/raw_lab/projects/Bats/bat_gut_micro/titan_project/test/mapped_reads